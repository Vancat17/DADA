<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    android:layout_margin="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/stroke_image"
                android:src="@drawable/dada"
                android:padding="10dp"
                android:layout_width="120dp"
                android:layout_height="120dp" />

            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_toEndOf="@id/stroke_image"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <TextView
                    android:id="@+id/stroke_topic"
                    android:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
                    android:textSize="16sp"
                    android:lines="1"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/stroke_price"
                    android:text="¥ 19.99"
                    android:textColor="@color/colorMoneyRed"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/stroke_state"
                    android:layout_width="wrap_content"
                    android:text="活动已结束"
                    android:gravity="center"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

            </LinearLayout>
        </RelativeLayout>

        <View
            android:background="#BBC4C6"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <Button
                android:id="@+id/chat_button"
                android:layout_marginStart="10dp"
                android:background="@color/colorTransparent"
                android:drawableStart="@drawable/dada"
                android:text="联系团长"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/quit_button"
                android:text="退出该团"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>