<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/detail_image"
            android:src="@drawable/download5"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <TextView
            android:id="@+id/sender_name"
            android:text="JK@XXX"
            android:textSize="12sp"
            android:textColor="@color/colorLightGrey"
            android:layout_alignEnd="@id/detail_image"
            android:layout_alignBottom="@id/detail_image"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/detail_topic"
            android:text="周五拼车泸州"
            android:textSize="20sp"
            android:background="@drawable/corners_half_background"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="180dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/detail_price"
            android:text="¥65"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/detail_topic"
            android:padding="10dp"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/activity_tag"
            android:text="拼车"
            android:textSize="12sp"
            android:layout_below="@id/detail_price"
            android:layout_margin="10dp"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/border_line_while"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/location_icon"
            android:layout_below="@id/detail_topic"
            android:layout_toEndOf="@id/activity_tag"
            android:src="@drawable/ic_location"
            android:layout_margin="10dp"
            android:layout_width="10dp"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/detail_location"
            android:text="成都 四川大学锦城学院"
            android:layout_below="@id/detail_topic"
            android:layout_toEndOf="@id/location_icon"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/people_num_icon"
            android:src="@drawable/ic_people_num"
            android:layout_below="@id/detail_topic"
            android:layout_toEndOf="@id/detail_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/detail_people_num"
            android:text="1/3"
            android:textSize="12sp"
            android:layout_below="@id/detail_topic"
            android:layout_toEndOf="@id/people_num_icon"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <cn.gavinliu.android.lib.shapedimageview.ShapedImageView
            android:id="@+id/sender_image"
            android:src="@drawable/images"
            android:scaleType="centerCrop"
            app:shape_mode="circle"
            android:layout_margin="5dp"
            android:layout_alignBottom="@id/sender_button"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/sender_names"
            android:text="陈独秀"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:layout_toEndOf="@id/sender_image"
            android:layout_alignBottom="@id/sender_button"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="50dp" />

        <View
            android:id="@+id/line"
            android:background="@drawable/view_line_while"
            android:layout_toEndOf="@id/sender_names"
            android:layout_margin="15dp"
            android:layout_alignBottom="@id/sender_button"
            android:layout_width="2dp"
            android:layout_height="20dp"/>

        <TextView
            android:id="@+id/credit_value"
            android:layout_width="wrap_content"
            android:text="信用值 85分"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:layout_alignBottom="@id/sender_button"
            android:layout_toEndOf="@id/line"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/sender_button"
            android:background="@color/colorTransparent"
            android:layout_below="@id/activity_tag"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/line1"
            android:background="@drawable/view_line_while"
            android:layout_margin="10dp"
            android:layout_width="2dp"
            android:layout_height="20dp"/>

        <TextView
            android:text="组团详情"
            android:gravity="center"
            android:layout_toEndOf="@id/line1"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/detail_detail"
            android:layout_below="@id/line1"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/line2"
            android:background="@drawable/view_line_while"
            android:layout_margin="10dp"
            android:layout_width="2dp"
            android:layout_height="20dp"/>

        <TextView
            android:text="价格详情"
            android:gravity="center"
            android:layout_toEndOf="@id/line2"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/price_detail"
            android:layout_below="@id/line2"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="附近组团" />

</LinearLayout>