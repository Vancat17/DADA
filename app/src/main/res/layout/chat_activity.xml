<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.scujcc.dada.message.ChatActivity">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <ImageButton
            android:id="@+id/back_button"
            android:src="@drawable/ic_back"
            android:background="@color/colorTransparent"
            android:layout_width="44dp"
            android:layout_height="44dp" />

        <TextView
            android:id="@+id/sender_name"
            android:text="小学生"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_toRightOf="@id/back_button"
            android:layout_toLeftOf="@id/more_button"
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/more_button"
            android:background="@color/colorTransparent"
            android:src="@drawable/ic_more"
            android:layout_alignParentEnd="true"
            android:layout_width="44dp"
            android:layout_height="44dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/detail"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageButton
            android:id="@+id/detail_image"
            android:layout_margin="10dp"
            android:src="@drawable/images"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/detail_topic"
            android:text="打羽毛球"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="18dp"
            android:layout_toEndOf="@id/detail_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/detail_price"
            android:text="¥35"
            android:layout_below="@id/detail_topic"
            android:layout_toEndOf="@id/detail_image"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="加入前聊一聊"
            android:textSize="10sp"
            android:layout_below="@id/detail_price"
            android:layout_toEndOf="@id/detail_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="SmallSp" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/chat_recycler"
        android:layout_below="@id/detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <ImageButton
            android:id="@+id/voice_button"
            android:background="@color/colorTransparent"
            android:src="@drawable/ic_voice"
            android:layout_width="44dp"
            android:layout_height="44dp" />

        <EditText
            android:id="@+id/message_input"
            android:layout_toEndOf="@id/voice_button"
            android:layout_toStartOf="@id/emoji_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/emoji_button"
            android:background="@color/colorTransparent"
            android:src="@drawable/ic_emoji"
            android:layout_toStartOf="@id/add_button"
            android:layout_width="44dp"
            android:layout_height="44dp" />

        <ImageButton
            android:id="@+id/add_button"
            android:background="@color/colorTransparent"
            android:src="@drawable/ic_add"
            android:layout_alignParentEnd="true"
            android:layout_width="44dp"
            android:layout_height="44dp" />
    </RelativeLayout>
</RelativeLayout>
