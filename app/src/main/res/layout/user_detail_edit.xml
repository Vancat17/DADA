<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@color/colorLightGrey"
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <Button
            android:id="@+id/detail_change_cancel"
            android:text="取消"
            android:paddingStart="6dp"
            android:background="@color/colorTransparent"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            tools:ignore="RtlSymmetry" />
        <TextView
            android:text="编辑资料"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/detail_change_done"
            android:text="完成"
            android:background="@color/colorTransparent"
            android:paddingEnd="6dp"
            android:layout_alignParentEnd="true"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            tools:ignore="RtlSymmetry" />


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <cn.gavinliu.android.lib.shapedimageview.ShapedImageView
            android:id="@+id/detail_user_photo"
            app:shape_mode="circle"
            android:layout_margin="10dp"
            android:src="@drawable/ic_user_photo"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/detail_change_photo"
            android:text="修改头像"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_margin="10dp"
        android:background="#F0F0F0"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <TextView
            android:text="性别"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/detail_change_name"
            android:text="小嗒"
            android:textColor="@color/colorBlack"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_margin="10dp"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <TextView
            android:text="性别"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/detail_change_sex"
            android:text="男"
            android:background="#00000000"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:textAlignment="viewStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat" />
    </LinearLayout>
    <View
        android:layout_margin="10dp"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <TextView
            android:text="年龄"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/detail_change_age"
            android:text="几零后"
            android:textColor="@color/colorLightGrey"
            android:background="@color/colorTransparent"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:textAlignment="viewStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/colorWhite"/>

    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <TextView
            android:text="行业"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/detail_change_job"
            android:text="计算机"
            android:background="#00000000"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:textAlignment="viewStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat" />
    </LinearLayout>
    <View
        android:layout_margin="10dp"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <TextView
            android:text="公司"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/detail_change_company"
            android:hint="添加所在公司"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:textSize="14sp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_margin="10dp"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <TextView
            android:text="个性签名"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/detail_change_sign"
            android:hint="还未填写个性签名，简单介绍一下自己吧"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/defaultText"
            />
    </LinearLayout>

</LinearLayout>