    数据库名字
    -->
    <dbname value="dada" />

    <!--
    数据库的版本号
    -->
    <version value="1" />

    <list>
        <mapping class="com.scujcc.dada.content.ContentItem" />
        <mapping class="com.scujcc.dada.message.MessageItem" />
        <mapping class="com.scujcc.dada.helper.User" />
        <mapping class="com.scujcc.dada.helper.Stroke"/>
        <mapping class="com.scujcc.dada.helper.Content"/>
    </list>

    <!--可以选择存储数据库/内部或者外部-->
